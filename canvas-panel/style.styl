color = white
font-color = #333
border-color = #ddd
:root
  --hd-height 80px
@font-face {
  font-family: 'iconfont';  /* project id 905467 */
  src: url('//at.alicdn.com/t/font_905467_iil3g1y6wn.eot');
  src: url('//at.alicdn.com/t/font_905467_iil3g1y6wn.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_905467_iil3g1y6wn.woff') format('woff'),
  url('//at.alicdn.com/t/font_905467_iil3g1y6wn.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_905467_iil3g1y6wn.svg#iconfont') format('svg');
}
body
  height 100vh 
  overflow hidden
body, h1, ul, li
  padding 0
  margin 0
  color font-color
ul, li
  list-style none
header
  line-height var(--hd-height)
  text-align center
  letter-spacing 2px
  border-bottom 1px solid border-color
  h1
    font-weight 300
    display inline-block
  sup
    font-size .8rem
.icon {
  width 1.5em;
  height 1.5em
  vertical-align -0.15em
  fill currentColor
  overflow hidden
}
.tools
  display inline-block
  padding-left 50px
  .icon
    cursor pointer
  .icon.active
    border-bottom 2px solid border-color
.color-wrap
  display inline-block
  span
    display inline-block
    width 36px
    line-height 36px
    border-radius 50%
    color color
    cursor pointer
    font-family: 'iconfont';
    font-size 20px
.black
  background black
.red
  background red
.grey
  background grey 
.blue
  background blue
canvas
  width 100vw
  height calc(100vh - var(--hd-height))
  border 0
  background-color color
  background-image linear-gradient(#eee 1px, transparent 1px), linear-gradient( 90deg, #eee 1px, transparent 1px)
  background-size 100% 1.2em, 1.2em 100%
.tools, .color-wrap
  display none
